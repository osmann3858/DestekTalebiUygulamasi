@model DestekTalebi

<h2>Destek Talebini Sil</h2>

<h3>Bu destek talebini silmek istediğinizden emin misiniz?</h3>
<div>
    <h4>@Model.Konu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Talep No
        </dt>
        
        <dt class="col-sm-2">
            Durum
        </dt>
        <dd class="col-sm-10">
            @Model.Durum
        </dd>
        <dt class="col-sm-2">
            Mesaj
        </dt>
        <dd class="col-sm-10">
            @Model.Mesaj
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Sil" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-secondary">İptal</a>
    </form>
</div>
